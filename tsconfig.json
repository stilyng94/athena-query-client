{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"extends": ["@total-typescript/tsconfig/tsc/no-dom/library"],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"**/*.test.ts",
		"src/__tests__"
	]
}
