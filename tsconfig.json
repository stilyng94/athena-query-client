{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
    "isolatedDeclarations": true,
    "declaration": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "dist"
	},
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"**/*.test.ts",
		"src/__tests__",
    "coverage",
    "tsdown.config.ts",
    "vitest.config.ts"
	]
}
